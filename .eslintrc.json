{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["standard-with-typescript", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "@typescript-eslint/indent": ["error", 2],
    "@typescript-eslint/semi": "off",
    "@typescript-eslint/consistent-type-definitions": "error"
  }
}
